{
    "name": "siushin/util",
    "description": "常见PHP助手函数，如：String、Array、Request、DateTime，以及PHP工具类",
    "type": "library",
    "keywords": [
        "php"
    ],
    "require": {
        "php": "^8.3",
        "ext-curl": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Siushin\\Util\\": "src/"
        },
        "files": [
            "src/Helper/Array.php",
            "src/Helper/DateTime.php",
            "src/Helper/Log.php",
            "src/Helper/Request.php"
        ]
    },
    "authors": [
        {
            "name": "siushin",
            "email": "siushin@163.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo '\\n\\033[32m[ siushin/util 提示 ]\\033[0m 您正在使用开发版本，建议生产环境使用稳定版本\\n';\""
        ]
    }
}
